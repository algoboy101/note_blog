//侧边栏 - 切换键
.sidebar-toggle {
    display:block;
}

// 首页 - 菜单栏排列
.menu {
    // text-align: left;
    // text-align: right;
    text-align: center;
    font-size: 18px;
}

// 首页 - 内容距离菜单栏的距离
.content {
    padding-top: 50px;
}

// 首页 文章之间的间距
.posts-expand .post-block:not(:first-child) {
    margin-top: 10px;
}

// 鼠标放上去之后呈现出加深的效果
// 首页 - 文章边框
.content .posts-expand .post-block:hover {
    box-shadow: 0 2px 4px 0 rgba(0,0,0,.1), 0 4px 8px 0 rgba(0,0,0,.1), 0 8px 16px 0 rgba(0,0,0,.1), 0 16px 32px 0 rgba(0,0,0,.1);
}
